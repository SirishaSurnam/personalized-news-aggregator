{
    "name": "Django News Aggregator",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "web",
    "workspaceFolder": "/app",
    
    "containerEnv": {
        "POSTGRES_DB": "newsaggregator_db",
        "POSTGRES_USER": "newsaggregator_user", 
        "POSTGRES_PASSWORD": "newsaggregator_password",
        "POSTGRES_HOST": "db",
        "POSTGRES_PORT": "5432",
        "REDIS_HOST": "redis",
        "REDIS_PORT": "6379",
        "CELERY_BROKER_URL": "redis://redis:6379/0",
        "CELERY_RESULT_BACKEND": "redis://redis:6379/0",
        "DJANGO_SETTINGS_MODULE": "news_aggregator.settings"
    },
    
    "forwardPorts": [8000, 6379],
    
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "python.languageServer": "Pylance",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    
    // Simplified post-create command
    "postCreateCommand": "echo 'Codespace ready! Run: docker compose up to start services'"
}