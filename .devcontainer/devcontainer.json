// .devcontainer/devcontainer.json
{
    "name": "Django News Aggregator",
    // Use your existing docker-compose.yml
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    // The service Codespaces should attach to for terminal, debugging, etc.
    "service": "web",
    // The workspace folder within the container
    "workspaceFolder": "/app",

    // Ports to forward automatically from the container to your local machine (browser access)
    "forwardPorts": [8000, 6379], // 8000 for Django, 6379 for Redis if you want to access it directly

    // Customizations for VS Code in the Codespace
    "customizations": {
        "vscode": {
            "settings": {
                // Add any VS Code settings you want applied to the Codespace
                "python.pythonPath": "/usr/local/bin/python",
                "python.languageServer": "Pylance",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true
            },
            "extensions": [
                // Recommended VS Code extensions for your project
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot" // If you use Copilot, otherwise remove/ignore
                // Add any other extensions you find useful, e.g., "esbenp.prettier-vscode" for frontend
            ]
        }
    },

    // Commands to run after the Codespace is created and services are up.
    // This is a good place for initial setup like migrations and collecting static files.
    "postCreateCommand": "bash -c \"docker compose exec web python manage.py migrate --noinput && docker compose exec web python manage.py collectstatic --noinput && echo 'Initial setup complete!'\"",

    // You might want to uncomment and adjust these if you need a specific remote user or features
    // "remoteUser": "root", // Use if your Dockerfile is running as root (often default for simple images)
    // "features": {
    //     "ghcr.io/devcontainers/features/sshd:1": {
    //         "version": "latest"
    //     }
    // }
}